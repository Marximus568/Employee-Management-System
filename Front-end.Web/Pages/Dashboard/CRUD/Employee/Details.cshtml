@page
@model Front_end.Web.Pages.Dashboard.CRUD.Employee.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "_DashboardLayout";
}

<div class="crud-header">
    <h1>Employee Details</h1>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Employee.Id" class="action-btn" style="background-color: #f39c12; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px; margin-right: 10px;">
