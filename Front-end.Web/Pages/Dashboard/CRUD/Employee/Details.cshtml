@page
@model Front_end.Web.Pages.Dashboard.CRUD.Employee.DetailsModel

@{
    ViewData["Title"] = "Employee Details";
    Layout = "_DashboardLayout";
}

<div class="employee-details-container">
    <!-- Header -->
    <div class="details-header">
        <div class="employee-header-info">
            <div class="employee-avatar-large">
                @Model.Employee.FirstName.Substring(0, 1)@Model.Employee.LastName.Substring(0, 1)
            </div>
            <div>
                <h1 class="employee-full-name">@Model.Employee.FirstName @Model.Employee.LastName</h1>
                <p class="employee-position">@Model.Employee.Position</p>
                <span class="status-badge status-@Model.Employee.Status.ToLower().Replace(" ", "-")">
                    @Model.Employee.Status
                </span>
            </div>
        </div>
        <div class="header-actions">
            <a asp-page="./Edit" asp-route-id="@Model.Employee.Id" class="btn btn-primary">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-page="./Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back
            </a>
        </div>
    </div>

    <div class="details-grid">
        <!-- Personal Information Card -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-user"></i>
                    Personal Information
                </h3>
            </div>
            <div class="card-body">
                <div class="info-grid">
                    <div class="info-item">
                        <label>Document Number</label>
                        <p>@Model.Employee.Document</p>
                    </div>
                    <div class="info-item">
                        <label>Birth Date</label>
                        <p>@Model.Employee.BirthDate.ToString("MMMM dd, yyyy")</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Information Card -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-address-book"></i>
                    Contact Information
                </h3>
            </div>
            <div class="card-body">
                <div class="info-grid">
                    <div class="info-item">
                        <label><i class="fas fa-envelope"></i> Email</label>
                        <p><a href="mailto:@Model.Employee.Email">@Model.Employee.Email</a></p>
                    </div>
                    <div class="info-item">
                        <label><i class="fas fa-phone"></i> Phone</label>
                        <p><a href="tel:@Model.Employee.Phone">@Model.Employee.Phone</a></p>
                    </div>
                    <div class="info-item full-width">
                        <label><i class="fas fa-map-marker-alt"></i> Address</label>
                        <p>@Model.Employee.Address</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Employment Details Card -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-briefcase"></i>
                    Employment Details
                </h3>
            </div>
            <div class="card-body">
                <div class="info-grid">
                    <div class="info-item">
                        <label>Department</label>
                        <p class="department-badge">@Model.Employee.Department.Name</p>
                    </div>
                    <div class="info-item">
                        <label>Position</label>
                        <p>@Model.Employee.Position</p>
                    </div>
                    <div class="info-item">
                        <label>Salary</label>
                        <p class="salary-amount">$@Model.Employee.Salary.ToString("N2")</p>
                    </div>
                    <div class="info-item">
                        <label>Hire Date</label>
                        <p>@Model.Employee.HireDate.ToString("MMMM dd, yyyy")</p>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Employee.ProfessionalProfile))
                    {
                        <div class="info-item full-width">
                            <label>Professional Profile</label>
                            <p>@Model.Employee.ProfessionalProfile</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="details-actions">
        <a asp-page="./Edit" asp-route-id="@Model.Employee.Id" class="btn btn-primary btn-lg">
            <i class="fas fa-edit"></i> Edit Employee
        </a>
        <a asp-page="./Delete" asp-route-id="@Model.Employee.Id" class="btn btn-outline btn-lg" style="border-color: var(--color-danger); color: var(--color-danger);">
            <i class="fas fa-trash-alt"></i> Delete Employee
        </a>
    </div>
</div>

<style>
    .employee-details-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: var(--spacing-lg);
    }

    .details-header {
        background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-accent) 100%);
        color: white;
        padding: var(--spacing-2xl);
        border-radius: var(--border-radius-lg);
        margin-bottom: var(--spacing-xl);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .employee-header-info {
        display: flex;
        align-items: center;
        gap: var(--spacing-xl);
    }

    .employee-avatar-large {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: var(--font-size-2xl);
        border: 3px solid rgba(255, 255, 255, 0.3);
    }

    .employee-full-name {
        font-size: var(--font-size-3xl);
        font-weight: 700;
        margin-bottom: var(--spacing-xs);
        color: white;
    }

    .employee-position {
        font-size: var(--font-size-lg);
        opacity: 0.9;
        margin-bottom: var(--spacing-sm);
    }

    .header-actions {
        display: flex;
        gap: var(--spacing-sm);
    }

    .header-actions .btn {
        background-color: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: white;
    }

    .header-actions .btn:hover {
        background-color: rgba(255, 255, 255, 0.3);
    }

    .details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: var(--spacing-xl);
        margin-bottom: var(--spacing-xl);
    }

    .card-title {
        font-size: var(--font-size-lg);
        font-weight: 600;
        color: var(--color-gray-800);
        margin: 0;
        display: flex;
        align-items: center;
        gap: var(--spacing-sm);
    }

    .card-title i {
        color: var(--color-primary);
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: var(--spacing-lg);
    }

    .info-item {
        display: flex;
        flex-direction: column;
    }

    .info-item.full-width {
        grid-column: 1 / -1;
    }

    .info-item label {
        font-size: var(--font-size-sm);
        font-weight: 600;
        color: var(--color-gray-600);
        margin-bottom: var(--spacing-xs);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .info-item label i {
        margin-right: 4px;
        color: var(--color-gray-400);
    }

    .info-item p {
        font-size: var(--font-size-base);
        color: var(--color-gray-900);
        margin: 0;
        line-height: 1.6;
    }

    .info-item a {
        color: var(--color-primary);
        text-decoration: none;
    }

    .info-item a:hover {
        text-decoration: underline;
    }

    .department-badge {
        display: inline-block;
        padding: 6px 12px;
        background-color: var(--color-gray-100);
        color: var(--color-gray-700);
        border-radius: var(--border-radius-md);
        font-weight: 500;
    }

    .salary-amount {
        font-size: var(--font-size-xl);
        font-weight: 700;
        color: var(--color-success);
    }

    .status-badge {
        display: inline-block;
        padding: 6px 12px;
        border-radius: var(--border-radius-md);
        font-size: var(--font-size-xs);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .status-active {
        background-color: #d4edda;
        color: #155724;
    }

    .status-inactive {
        background-color: #f8d7da;
        color: #721c24;
    }

    .status-on-leave {
        background-color: #fff3cd;
        color: #856404;
    }

    .details-actions {
        display: flex;
        gap: var(--spacing-md);
        padding-top: var(--spacing-xl);
        border-top: 2px solid var(--color-gray-200);
    }

    @@media (max-width: 768px) {
        .details-header {
            flex-direction: column;
            text-align: center;
            gap: var(--spacing-lg);
        }

        .employee-header-info {
            flex-direction: column;
            text-align: center;
        }

        .header-actions {
            width: 100%;
        }

        .header-actions .btn {
            flex: 1;
        }

        .details-grid {
            grid-template-columns: 1fr;
        }

        .info-grid {
            grid-template-columns: 1fr;
        }

        .details-actions {
            flex-direction: column;
        }

        .details-actions .btn {
            width: 100%;
        }
    }
</style>
